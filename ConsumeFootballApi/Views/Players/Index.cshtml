@using ConsumeFootballApi.Models.Dtos
@model List<PlayerDto>

<h2>Players</h2>

<a asp-action="Create" class="btn btn-primary">Create New Player</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Nationality</th>
            <th>Position</th>
            <th>Team</th>
            <th>Profile Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var player in Model)
            {
                <tr>
                    <td>@player.Name</td>
                    <td>@player.Nationality</td>
                    <td>@player.Position</td>
                    <td>@player.TeamName</td>
                    <td>
                        <img src="@player.ProfilePicturePath" alt="Player Picture" style="max-width: 100px;" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@player.PlayerId" class="btn btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@player.PlayerId" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@player.PlayerId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No players available.</td>
            </tr>
        }
    </tbody>
</table>
