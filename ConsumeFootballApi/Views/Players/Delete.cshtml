@using ConsumeFootballApi.Models.Dtos
@model PlayerDto

<h2>Delete Player</h2>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Nationality</dt>
    <dd class="col-sm-10">@Model.Nationality</dd>

    <dt class="col-sm-2">Position</dt>
    <dd class="col-sm-10">@Model.Position</dd>

    <dt class="col-sm-2">Team</dt>
    <dd class="col-sm-10">@Model.TeamName</dd>

    <dt class="col-sm-2">Profile Picture</dt>
    <dd class="col-sm-10">
        <img src="@Model.ProfilePicturePath" alt="Player Picture" style="max-width: 150px;" />
    </dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PlayerId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
