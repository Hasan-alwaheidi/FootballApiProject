@using ConsumeFootballApi.Models.Dtos
@model LeagueDto

<h2>League Details</h2>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Country</dt>
    <dd class="col-sm-10">@Model.Country</dd>

    <dt class="col-sm-2">Season</dt>
    <dd class="col-sm-10">@Model.Season</dd>

    <dt class="col-sm-2">Logo</dt>
    <dd class="col-sm-10">
        <img src="@Model.LogoPath" alt="League Logo" style="max-width: 150px;" />
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.LeagueId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
