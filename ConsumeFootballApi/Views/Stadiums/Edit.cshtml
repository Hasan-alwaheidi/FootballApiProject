@using ConsumeFootballApi.Models.Dtos
@model UpdateStadiumDto

<h2>Edit Stadium</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="StadiumId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" class="form-control-file" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
    {
        <div class="form-group">
            <label>Current Image</label>
            <img src="@Model.ExistingImagePath" alt="Stadium Image" class="img-thumbnail" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
