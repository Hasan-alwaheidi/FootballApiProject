@model ConsumeFootballApi.Models.Dtos.TeamDto

<h2>Delete Team</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Coach</dt>
        <dd class="col-sm-10">@Model.Coach</dd>
        <dt class="col-sm-2">Logo</dt>
        <dd class="col-sm-10"><img src="@Model.LogoPath" alt="Logo" style="width: 150px;" /></dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="TeamId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
