@using FootballApiProject.Models.DTO_s.TeamsDto
@model IEnumerable<TeamDetailsDto>

<h2>Teams</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Coach</th>
            <th>Stadium</th>
            <th>League</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.Coach</td>
                <td>@team.StadiumName</td>
                <td>@team.LeagueName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@team.TeamId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@team.TeamId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@team.TeamId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Team</a>
